<h1> Recipe Homepage </h1>

<% if @recipes %>
  <h3>All Recipes</h3>
  <% @recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
<% end %>

<form action="/recipes" method="post">
  <label for="name">Name:</label>
  <input id="name" name="recipes[name]" type="text" value="<%= @recipe.name %>"><br>
  <label for="content">Instructions:</label><br>
  <textarea id="content" name="recipes[content]" rows="10" cols="50" placeholder="Recipe Instructions..." value="<%= @recipe.content %>"></textarea><br>
  <button type="submit">Add Recipe</button>
</form>
