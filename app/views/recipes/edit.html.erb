<h1>Edit Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Name:</label>
  <input id="name" name="recipes[name]" type="text" value="<%= @recipe.name %>"><br>
  <label for="content">Instructions:</label><br>
  <textarea id="content" name="recipes[content]" rows="10" cols="50"><%= @recipe.content %></textarea><br>
  <button class="btn btn-success">Update Recipe</button>
</form>
<br>
<a href="/recipes/<%= @recipe.id %>"><button class="btn btn-warning">Cancel</button></a>
